<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mTitleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="#eeeeee"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/list_divider"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/walkbtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="步行路线"
                android:textSize="16sp" />

            <Button
                android:id="@+id/busbtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="公交路线"
                android:textSize="16sp" />

            <Button
                android:id="@+id/drivebtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="驾车路线"
                android:textSize="16sp" />
        </LinearLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/mRTBusListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1dip" />

            <ListView
                android:id="@+id/mBuslineListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1dip" />

            <ListView
                android:id="@+id/mRoutListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1dip" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>