<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingBottom="36dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical" >

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/main1_blue"
                android:gravity="left"
                android:paddingBottom="0dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dp"
                android:text="经过的线路"
                android:textColor="@color/white"
                android:textSize="14sp" >
            </TextView>
            -->

            <LinearLayout
                android:id="@+id/realtime_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:alpha="0.85"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mtNearbyBuslines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:alpha="0.85"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" >

                <com.bnrc.util.SlidingDrawerGridView
                    android:id="@+id/allbuslines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:listSelector="#eeeeee"
                    android:numColumns="3" >
                </com.bnrc.util.SlidingDrawerGridView>
            </LinearLayout>

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/main1_blue"
                android:gravity="left"
                android:paddingBottom="0dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dp"
                android:text="实时车辆信息"
                android:textColor="@color/white"
                android:textSize="14sp" >
            </TextView>
            -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-37dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/list_divider"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/isFavbtn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#2ca7cc"
                android:padding="0dp"
                android:text="收藏站点"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/isAlertbtn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#2ca7cc"
                android:padding="0dp"
                android:text="添加提醒"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/gotobtn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#2ca7cc"
                android:padding="0dp"
                android:text="到这里去"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>